<!--DASHBOARD ITEM CARD-->
          <div class="container dashcontainer">
            <div class="row">
                <div class="col-md-3">
                  <div class="card-item">
                      <i class="fas fa-dollar-sign ic a"></i>
                      <h1 class="title">€<%= @this_week_revenue  %></h1>
                      <p>WEEK REVENUE</p>
                  </div>
            </div>

            <div class="col-md-3">
              <div class="card-item">
                  <i class="fas fa-chart-bar ic b"></i>
                  <% if @last_week_revenue != 0 %>
                  <h1 class="title"><%= (@last_week_revenue - @this_week_revenue)/(@last_week_revenue *100)  %>%</h1>
                  <% else %>
                <h1>No info available</h1>
                  <% end %>
                  <p>REVENUE DIFFERENCE</p>
              </div>
            </div>

            <div class="col-md-3">
              <div class="card-item">
                  <i class="fas fa-dollar-sign ic c"></i>
                  <h1 class="title">€<%= @total %></h1>
                  <p>PROJECTED REVENUE</p>
              </div>
            </div>

            <div class="col-md-3">
              <div class="card-item">
                  <i class="fas fa-user-plus ic d"></i>
                  <h1 class="title"><%= @upcoming_events.count  %></h1>
                  <p>TOTAL BOOKINGS</p>
              </div>
            </div>

            </div>
          </div>


          <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>

          <link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">

<!--*DASHBOAD CARDS ENDS-->
<div class="container">
<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
  animationEnabled: true,
  theme: "light2",
  title:{
    text: "Weekly users"
  },
  axisY:{
    includeZero: false
  },
  data: [{
    type: "line",
    dataPoints: [
      { y: <%= @week1.count %> },
      { y: <%= @week2.count %> },
      { y: <%= @week3.count %> },
      { y: <%= @week4.count %> },
      { y: <%= @week5.count %> },
      { y: <%= @week6.count %> },
      ]
  }]
});
chart.render();

}
</script>
<div id="chartContainer" style="height: 370px; width: 100%;"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</div>
