<%= content_for :title do  %>
Players - Playgrounds
<% end %>

<div class="container">
  <h1> Find a player </h1>

  <%= form_tag user_players_path, method: :get do %>

    <div class="col-xs-12 col-sm-2">
      <p><%= text_field_tag :first_name,
        params[:first_name],
        class: "form-control",
        placeholder: "Enter a first name"
      %></p>
    </div>
    <div class="col-xs-12 col-sm-2">
      <p><%= text_field_tag :last_name,
        params[:last_name],
        class: "form-control",
        placeholder: "Enter a last name"
      %></p>
    </div>
    <div class="col-xs-12 col-sm-2">
      <p><%= select_tag :gender,
        options_for_select(["Male", "Female"]),
        class: "form-control",
        prompt: "Select a gender"
      %></p>
    </div>
    <div class="col-xs-12 col-sm-2">
      <p><%= select_tag :tennis_level,
        options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"]),
        class: "form-control",
        prompt: "Select a tennis level"
      %></p>
    </div>
    <div class="col-xs-12 col-sm-2">
      <p><%= select_tag :squash_level,
        options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"]),
        class: "form-control",
        prompt: "Select a squash level"
      %></p>
    </div>
    <div class="col-xs-12 col-sm-2">
      <p><%= select_tag :padel_level,
        options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"]),
        class: "form-control",
        prompt: "Select a padel level"
      %></p>
    </div>
    <div class="col-xs-12 col-sm-1">
      <p><%= submit_tag 'Search', class: 'btn btn-primary'%></p>
    </div>
  <% end %>
    <p><%= link_to 'Home', root_path, class: "btn btn-primary" %></p>
</div>

  <div class="container">
    <div class="row">
      <% @players.each do |p| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to user_player_path(current_user, p) do %>
          <div class="card_players text-center" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0));">
            <div class="card-category">Rating</div>
            <div class="card-description">
              <h2><%= p.first_name %> <%= p.last_name %></h2>
              <p><% unless p.tennis_level == "" %>
                Tennis: <%= p.tennis_level  %>
                <% end %>
                <% unless p.squash_level == "" %>
                |Squash: <%= p.squash_level %>
                <% end %>
                <% unless p.padel_level == "" %>
                |Padel: <%= p.padel_level %>
                <% end %>
                </p>
            </div>
            <%= cl_image_tag p.photo, height: 400, width: 400, crop: :fill, crop: :thumb, gravity: :face, class: "card-user" %>
          </div>
          <% end %>
          </div>
        <% end %>
    </div>
  </div>
