<%= content_for :title do  %>
Players - Playgrounds
<% end %>

<section id="team" class="pb-5">
  <div class="container-player">
    <h5 class="section-title h1">Find your partner</h5>
    <div class="search-player">
      <%= form_tag user_players_path, method: :get do %>
        <div class="col-xs-12 col-sm-2">
          <p><%= text_field_tag :first_name,
            params[:first_name],
            class: "form-control",
            placeholder: "Enter a first name"
          %></p>
        </div>
        <div class="col-xs-12 col-sm-2">
          <p><%= text_field_tag :last_name,
            params[:last_name],
            class: "form-control",
            placeholder: "Enter a last name"
          %></p>
        </div>
        <div class="col-xs-12 col-sm-2">
          <p><%= select_tag :gender,
            options_for_select(["Male", "Female"]),
            class: "form-control",
            prompt: "Select a gender"
          %></p>
        </div>
        <div class="col-xs-12 col-sm-2">
          <p><%= select_tag :tennis_level,
            options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"]),
            class: "form-control",
            prompt: "Select a tennis level"
          %></p>
        </div>
        <div class="col-xs-12 col-sm-2">
          <p><%= select_tag :squash_level,
            options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"]),
            class: "form-control",
            prompt: "Select a squash level"
          %></p>
        </div>
        <div class="col-xs-12 col-sm-2">
          <p><%= select_tag :padel_level,
            options_for_select(["Beginner", "Intermediate", "Advanced", "Expert"]),
            class: "form-control",
            prompt: "Select a padel level"
          %></p>
        </div>
        <div class="col-xs-12 col-sm-1">
          <p><%= submit_tag 'Search', class: 'btn btn-primary'%></p>
        </div>
      <% end %>
    </div>
    <div class="row">
      <% @players.each do |p| %>
        <div class="col-xs-12 col-sm-6 col-md-4 margin-on-player-card">
          <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
            <div class="mainflip">
              <div class="frontside">
                <div class="card-player-index">
                  <div class="card-body-player-index text-center">
                    <p><%= cl_image_tag p.photo, class: "img-fluid",height: 400, width: 400, crop: :fill, crop: :thumb, gravity: :face, alt: "card image" %></p>
                    <h4 class="card-title">
                      <%= p.first_name %>
                      <%= p.last_name %>
                    </h4>

                    <p class="card-text-player-index text-center">
                      <% unless p.tennis_level == "" %>
                        Tennis: <%= p.tennis_level  %>
                      <% end %>
                      <% unless p.squash_level == "" %>
                        |Squash: <%= p.squash_level %>
                      <% end %>
                      <% unless p.padel_level == "" %>
                        |Padel: <%= p.padel_level %>
                      <% end %>
                    </p>
                    <a href="#" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
                  </div>
                </div>
              </div>
              <div class="backside">
                <div class="card-player-index">
                  <div class="card-body-player-index text-center">
                    <h4 class="card-title-backside">
                      <%= p.first_name %>
                      <%= p.last_name %>
                    </h4>
                    <p class="card-text-player-index-backside"><%= p.description %></p>
                    <ul class="list-inline">
                      <li class="list-inline-item">
                          <a class="social-icon text-xs-center" target="_blank" href="#">
                              <i class="fa fa-facebook"></i>
                          </a>
                      </li>
                      <li class="list-inline-item">
                          <a class="social-icon text-xs-center" target="_blank" href="#">
                              <i class="fa fa-twitter"></i>
                          </a>
                      </li>
                      <li class="list-inline-item">
                          <a class="social-icon text-xs-center" target="_blank" href="#">
                              <i class="fa fa-skype"></i>
                          </a>
                      </li>
                      <li class="list-inline-item">
                          <a class="social-icon text-xs-center" target="_blank" href="#">
                              <i class="fa fa-google"></i>
                          </a>
                      </li>
                    </ul>
                  </div>
                  <div class="card-link-to-player text-center">
                    <%= link_to "See player", user_player_path(current_user, p), class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
