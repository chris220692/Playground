<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="club-form">
          <h1>Find a Club</h1>
          <%= form_tag clubs_path, method: :get do %>
            <div class="col-xs-12 col-md-4">
              <p><%= text_field_tag :name,
                params[:name],
                class: "form-control",
                placeholder: "Enter a Club name"
                %>
              </p>
            </div>
            <div class="col-xs-12 col-md-4">
              <p><%= text_field_tag :adress,
                params[:adress],
                class: "form-control",
                placeholder: "Enter an adress" %>
              </p>
            </div>
            <div class="col-xs-12 col-md-4">
              <p>
                <%= submit_tag 'Search', class: 'btn btn-primary'%>  <%= link_to 'Home', root_path, class: "btn btn-primary", class: "btn btn-primary" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
      <div class="cards-container">
        <div class="row">
          <div class="col-xs-12">
            <% @clubs.each do |c| %>
              <%= link_to club_path(c) do %>
                <div class="club-card">
                  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path c.photo %>'); border-radius: 5px;">
                    <div class="card-category"><%= c.name %></div>
                    <div class="card-description">
                      <h2><%= c.address %></h2>
                      <p>Rating(must be update)</p>
                    </div>
                    <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div
    id="map" class="clubs-index"
    data-markers="<%= @markers.to_json %>"
    data-spy="affix" data-offset-top="197"
    ></div>
</div>
