<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="search-club">
        <div class="col-xs-12">
          <div class="club-form">
            <h1>Find your playground</h1>
            <h2>clubs/index</h2>
            <%= form_tag clubs_path, method: :get do %>
              <div class="col-xs-12 col-md-3">
                <p><%= select_tag :field_type,
                  options_for_select(["Tennis", "Squash", "Padel"]),
                  class: "form-control",
                  placeholder: "Field type" %>
                </p>
              </div>
              <div class="col-xs-12 col-md-3">
                <p><%= text_field_tag :city,
                  params[:city],
                  class: "form-control",
                  placeholder: "City" %>
                </p>
              </div>
              <div class="col-xs-12 col-md-3">
                <p><%= text_field_tag :name,
                  params[:name],
                  class: "form-control",
                  placeholder: "Club" %>
                </p>
              </div>


              <div class="col-xs-12 col-md-3">
                <p><%= datetime_local_field_tag :start_date,
                  params[:start_date],
                  class: "form-control",
                  placeholder: "When?"%>
                </p>
                <p><%= datetime_local_field_tag :end_date,
                  params[:end_date],
                  class: "form-control",
                  placeholder: "When?" %>
                </p>
              </div>

              <div class="col-xs-12 col-md-3">
                <p>
                  <%= submit_tag 'Search', class: 'btn btn-primary', id: 'search-bar-club'%>  <%= link_to 'Home',root_path, class: "btn btn-primary", class: "btn btn-primary" %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="cards-container">
      <div class="row">
        <div class="col-xs-12">
          <% @fields.each do |f| %>
            <%= link_to club_field_path(:club_id, f) do %>
              <div class="club-card">
                <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path f.user.club.photo %>'); border-radius: 5px;">
                  <div class="card-category">
                    <h4><%= f.user.club.name %></h4>
                  </div>
                  <div class="card-description">
                    <h5><%= f.user.club.address %></h5>
                    <p>Rating: </p>
                    <% ratings = f.user.club.reviews.map do |review| %>
                      <% review.rating %>
                    <% end %>
                    <% (ratings.sum/ratings.size).times do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                  </div>

                  <% if f.field_type == "Tennis" %>
                    <img src='https://kitt.lewagon.com/placeholder/users/eschults' class="avatar-square"/>
                  <%  else %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div
  id="map" class="clubs-index"
  data-markers="<%= @markers.to_json %>"
  data-spy="affix" data-offset-top="197"
  ></div>
</div>
